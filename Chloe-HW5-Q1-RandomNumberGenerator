plt.savefig("HW5a-milrand-100sub.jpeg")
plt.show()


# In[65]:

plt.hist(y, bins=10, color='#9400D3', label='10 subdivisions')
plt.hist(y, bins=20, color='#FF1493', label='20 subdivisions')
plt.hist(y, bins=50, color='#00BFFF', label='50 subdivisions')
plt.hist(y, bins=100, color='#696969', label='100 subdivisions')
plt.title("Distribution of 1,000,000 Random Numbers")
plt.xlabel("Value")
plt.ylabel("Frequency")
plt.legend()
plt.ylim(0,150000)
plt.savefig("HW5a-milrand.jpeg")
plt.show()


